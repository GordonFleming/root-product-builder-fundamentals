[
  {
    "block": {
      "key": "incident_heading",
      "type": "heading",
      "title": "Incident description"
    }
  },
  {
    "block": {
      "type": "radio",
      "key": "claim_type",
      "title": "Claim type",
      "options": [
        {
          "key": "illness",
          "value": "No"
        },
        {
          "key": "death",
          "value": "No"
        }
      ]
    }
  },
  {
    "block": {
      "key": "incident_date",
      "type": "input.date",
      "title": "Date of incident",
      "placeholder": "{{ dateNow }}"
    }
  },
  {
    "block": {
      "key": "reported_date",
      "type": "input.date",
      "title": "Date Reported",
      "default_value": "{{ dateNow }}",
      "placeholder": "{{ dateNow }}"
    }
  },
  {
    "show_if": "{{ifCondition moment(claim.reported_date).diff(moment(claim.incident_date), 'days') '>' 60}}",
    "block": {
      "key": "date_warning_past",
      "type": "alert",
      "markdown": "Warning: Claims must be logged within 60 days of the incident occurring.",
      "color": "danger"
    }
  },
  {
    "show_if": "{{ifCondition moment(claim.incident_date).diff(moment(claim.policy.start_date), 'days') '<' 30}}",
    "block": {
      "key": "date_warning_illness",
      "type": "alert",
      "markdown": "Warning: Claim for illness must be outside of the waiting period of 1 month.",
      "color": "danger"
    }
  },
  {
    "show_if": "{{ifCondition moment(claim.incident_date).diff(moment(claim.policy.start_date), 'days') '<' 90}}",
    "block": {
      "key": "date_warning_death",
      "type": "alert",
      "markdown": "Warning: Claim for death must be outside of the waiting period of 1 month.",
      "color": "danger"
    }
  },
  {
    "block": {
      "key": "incident_description",
      "type": "input.paragraph",
      "title": "Description of incident",
      "placeholder": "On the date of the incident, the following occurred...",
      "max_length": 500,
      "min_length": 150
    }
  },
  {
    "block": {
      "key": "claim_type_divider",
      "type": "divider"
    }
  },
  {
    "block": {
      "key": "payment_details",
      "type": "heading",
      "title": "Payment details"
    }
  }
]
