[
  {
    "show_if": "{{if if(dateDifference dateNow  claim.policy.start_date measurement='days')) '<' 30) '&&' if(claim.block_states.claim_type.option_value === 'illness')}}",
    "block": {
      "key": "illness_waiting_period",
      "type": "alert",
      "markdown": "Warning: 1 month waiting period from the policy start date.",
      "color": "warning"
    }
  },
  {
    "show_if": "{{if if(dateDifference dateNow claim.policy.start_date measurement='days') '<' 90) '&&' if(claim.block_states.claim_type.option_value === 'death')}}",
    "block": {
      "key": "death_waiting_period",
      "type": "alert",
      "markdown": "Warning: 3 month waiting period from policy start date.",
      "color": "warning"
    }
  },
  {
    "block": {
      "key": "incident_heading",
      "type": "heading",
      "title": "Incident description"
    }
  },
  {
    "block": {
      "type": "radio",
      "key": "claim_type",
      "title": "Claim type",
      "options": [
        {
          "key": "illness",
          "value": "No"
        },
        {
          "key": "death",
          "value": "No"
        }
      ]
    }
  },
  {
    "block": {
      "key": "incident_date",
      "type": "input.date",
      "title": "Date of incident",
      "placeholder": "{{ dateNow format='YYYY-MM-DD' }}"
    }
  },
  {
    "block": {
      "key": "reported_date",
      "type": "input.date",
      "title": "Date Reported",
      "default_value": "{{ dateNow format='YYYY-MM-DD'  }}",
      "placeholder": "{{ dateNow format='YYYY-MM-DD' }}"
    }
  },
  {
    "show_if": "{{if if(dateDifference claim.block_states.reported_date.value claim.block_states.incident_date.value measurement='days') '>' 60}}",
    "block": {
      "key": "date_warning_past",
      "type": "alert",
      "markdown": "Warning: Claims must be logged within 60 days of the incident occurring.",
      "color": "danger"
    }
  },
  {
    "show_if": "{{if if(dateDifference claim.block_states.incident_date.value claim.policy.start_date measurement='days') '<' 30}}",
    "block": {
      "key": "date_warning_illness",
      "type": "alert",
      "markdown": "Warning: Claim for illness must be outside of the waiting period of 1 month.",
      "color": "danger"
    }
  },
  {
    "show_if": "{{if if(dateDifference claim.incident_date claim.policy.start_date measurement='days') '<' 90}}",
    "block": {
      "key": "date_warning_death",
      "type": "alert",
      "markdown": "Warning: Claim for death must be outside of the waiting period of 1 month.",
      "color": "danger"
    }
  },
  {
    "block": {
      "key": "incident_description",
      "type": "input.paragraph",
      "title": "Description of incident",
      "placeholder": "On the date of the incident, the following occurred...",
      "max_length": 500,
      "min_length": 150
    }
  },
  {
    "block": {
      "key": "claim_type_divider",
      "type": "divider"
    }
  },
  {
    "block": {
      "key": "payment_details",
      "type": "heading",
      "title": "Payment details"
    }
  },
  {
    "block": {
      "key": "bank_name",
      "type": "dropdown",
      "title": "Bank Name",
      "options": [
        {
          "key": "absa",
          "value": "ABSA"
        },
        {
          "key": "african_bank",
          "value": "African Bank"
        },
        {
          "key": "bidvest",
          "value": "Bidvest"
        },
        {
          "key": "capitec",
          "value": "Capitec"
        },
        {
          "key": "discovery_bank",
          "value": "Discovery Bank"
        },
        {
          "key": "fnb",
          "value": "FNB"
        },
        {
          "key": "investec",
          "value": "Investec"
        },
        {
          "key": "ithala",
          "value": "Ithala"
        },
        {
          "key": "nedbank",
          "value": "Nedbank"
        },
        {
          "key": "old_mutual",
          "value": "Old Mutual"
        },
        {
          "key": "postbank",
          "value": "Postbank"
        },
        {
          "key": "standard_bank",
          "value": "Standard Bank"
        },
        {
          "key": "tyme_bank",
          "value": "Tyme Bank"
        }
      ],
      "default_value": "FNB"
    }
  },
  {
    "block": {
      "key": "bank_code",
      "type": "input.number",
      "title": "Branch Code",
      "placeholder": 632005
    }
  },
  {
    "block": {
      "key": "account_type",
      "type": "dropdown",
      "title": "Account Type",
      "options": [
        {
          "key": "savings_account",
          "value": "Savings Account"
        },
        {
          "key": "cheque_account",
          "value": "Cheque Account"
        }
      ]
    }
  },
  {
    "block": {
      "key": "account_number",
      "type": "input.number",
      "title": "Account Number",
      "placeholder": 123456789
    }
  },
  {
    "disabled_if": "{{if (if claim.approval_status === 'approved') '||' (if claim.approval_status === 'goodwill') }}",
    "block": {
      "type": "payout_request",
      "key": "payout_block",
      "title": "Dinosaur Payout Block",
      "amount": "{{ claim.policy.sum_assured }}",
      "description": "Payout for the injured or deceased dinosaur",
      "payee": {
        "type": "policyholder",
        "policyholder_id": "{{ claim.policy.policyholder_id }}",
        "amount": "{{ claim.policy.sum_assured }}",
        "percentage": "100",
        "payment_details": {
          "type": "eft",
          "details": {
            "bank_name": "{{ claim.block_states.bank_name.value }}",
            "branch_code": "{{ claim.block_states.bank_code.value }}",
            "account_type": "{{ claim.block_states.account_type.value }}",
            "account_number": "{{ claim.block_states.account_number.value }}"
          }
        }
      }
    }
  }
]
